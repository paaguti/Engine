<?xml version="1.0" ?> 
<CompositionSpecification>
  <Modules>

    <Module id="SimpleSwitch" loaderIdentification="simple_switch.py">
			<CallCondition events="packetIn"/>
    </Module>

    <Module id="Firewall_1" loaderIdentification="firewall.py">
      <CallCondition events="packetIn"/>
	  </Module>

  </Modules>
  <Composition>
    <ModuleCall module="Firewall_1" notInstallFlow="true"/>
    <ParallelCall resolutionPolicy="priority">
      <ModuleCall module="Firewall_1" priority="1"/>
      <ModuleCall module="SimpleSwitch" priority="2"/>
    </ParallelCall>
  </Composition>
</CompositionSpecification>